<Window x:Class="_9_Ariketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Lista de Amigos" Height="450" Width="800">
    <Grid>
        <Label Content="Mis Amigos" HorizontalAlignment="Left" Margin="40,20,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <ListBox x:Name="ListBoxAmigos" Margin="40,55,624,200" 
                 SelectionMode="Extended" 
                 SelectionChanged="ListBoxAmigos_SelectionChanged" 
                 MouseDoubleClick="ListBoxAmigos_MouseDoubleClick"/>

        <Label Content="Amigo Seleccionado" HorizontalAlignment="Left" Margin="40,257,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="TextBoxAmigoSeleccionado" Margin="40,288,624,0" VerticalAlignment="Top" Height="30" IsReadOnly="True"/>

        <Label Content="Amigo Nuevo" HorizontalAlignment="Left" Margin="40,332,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="TextBoxAmigoNuevo" Margin="40,365,624,0" VerticalAlignment="Top" Height="30"/>

        <Button Content="Añadir" HorizontalAlignment="Left" Margin="526,55,0,0" VerticalAlignment="Top" Height="30" Width="104" Click="ButtonAñadir_Click"/>
        <Button Content="Eliminar" HorizontalAlignment="Left" Margin="526,115,0,0" VerticalAlignment="Top" Height="30" Width="104" Click="ButtonEliminar_Click"/>
        <Button Content="Borrar Lista" HorizontalAlignment="Left" Margin="526,187,0,0" VerticalAlignment="Top" Height="30" Width="104" Click="ButtonBorrarLista_Click"/>
        <Button Content="Salir" HorizontalAlignment="Left" Margin="550,330,0,0" VerticalAlignment="Top" Height="30" Width="80" Click="ButtonSalir_Click" RenderTransformOrigin="0.469,0.551"/>
    </Grid>
</Window>