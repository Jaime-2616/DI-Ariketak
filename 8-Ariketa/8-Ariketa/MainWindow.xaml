<Window x:Class="_8_Ariketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_8_Ariketa"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Ejecutar" HorizontalAlignment="Left" Margin="245,350,0,0"
                VerticalAlignment="Top" Width="70" Click="Ejecutar_Click"/>
        <Button Content="Limpiar" HorizontalAlignment="Left" Margin="327,350,0,0"
                VerticalAlignment="Top" Width="70" Click="Limpiar_Click"/>
        <Button Content="Salir" HorizontalAlignment="Left" Margin="417,350,0,0"
                VerticalAlignment="Top" Width="70" Click="Button_Click"/>

        <Label Content="Ahora" HorizontalAlignment="Left" Margin="136,95,0,0" VerticalAlignment="Top"/>
        <Label Content="Hoy" HorizontalAlignment="Left" Margin="136,126,0,0" VerticalAlignment="Top"/>
        <Label Content="Hora de Hoy" HorizontalAlignment="Left" Margin="136,170,0,0" VerticalAlignment="Top"/>
        <Label Content="Suma de Fechas" HorizontalAlignment="Left" Margin="136,217,0,0" VerticalAlignment="Top"/>
        <Label Content="Diferencia de fechas" HorizontalAlignment="Left" Margin="136,260,0,0" VerticalAlignment="Top"/>

        <TextBox x:Name="txtAhora" HorizontalAlignment="Center" Margin="0,99,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtHoy" HorizontalAlignment="Center" Margin="0,130,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtHoraHoy" HorizontalAlignment="Center" Margin="0,174,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtSumaFechas" HorizontalAlignment="Center" Margin="0,221,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtDiferencia" HorizontalAlignment="Center" Margin="0,264,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
