<Window x:Class="EstilosTiposLetra.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Estilos y tipos de letra" Height="400" Width="600">
    <Grid Margin="10">
        <TextBlock x:Name="txtTitulo" Text="PROBAKO TESTUA"
                   FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0" >
            <Button Content="Comic Sans" Click="BtnComicSans_Click"/>
            <Button Content="Courier" Click="BtnCourier_Click"/>
            <Button Content="Negrita" Click="BtnNegrita_Click"/>
            <Button Content="Cursiva" Click="BtnCursiva_Click"/>
            <Button Content="Tachado" Click="BtnTachado_Click"/>
            <Button Content="Subrayado" Click="BtnSubrayado_Click"/>
            <Button Content="+Tamaño" Click="BtnAumentar_Click"/>
            <Button Content="-Tamaño" Click="BtnDisminuir_Click"/>
        </StackPanel>

        <TextBox x:Name="txtEditor" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,120,0,0"
                 Width="400" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

        <Button Content="Seleccionar" Width="100" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,220,0,0" Click="BtnSeleccionar_Click"/>
        <Button Content="Salir" Width="100" HorizontalAlignment="Right" Margin="0,220,20,0" VerticalAlignment="Top" Click="BtnSalir_Click"/>

        <Label x:Name="lblInfo" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0"/>
    </Grid>
</Window>
