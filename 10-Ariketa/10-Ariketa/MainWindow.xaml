<Window x:Class="_10_Ariketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ejercicio 10" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="10">
            <Label Content="1ª Fila" FontWeight="Bold"/>
            <CheckBox x:Name="chkImg1" Content="Imagen 1" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
            <CheckBox x:Name="chkImg2" Content="Imagen 2" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
            <CheckBox x:Name="chkImg3" Content="Imagen 3" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>

            <Separator Margin="0,10,0,10"/>

            <Label Content="2ª Fila " FontWeight="Bold"/>
            <ComboBox x:Name="cboImagenes" SelectionChanged="cboImagenes_SelectionChanged" Width="150">
                <ComboBoxItem Content="Imagen 4"/>
                <ComboBoxItem Content="Imagen 5"/>
                <ComboBoxItem Content="Imagen 6"/>
            </ComboBox>

            <Button Content="Salir" Margin="0,20,0,0" Click="Salir_Click"/>
        </StackPanel>

        <WrapPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <Image x:Name="img1" Source="images/image1.jpg" Width="150" Height="100" Visibility="Collapsed" Margin="5"/>
            <Image x:Name="img2" Source="images/image2.jpg" Width="150" Height="100" Visibility="Collapsed" Margin="5"/>
            <Image x:Name="img3" Source="images/image3.jpg" Width="150" Height="100" Visibility="Collapsed" Margin="5"/>

            <Image x:Name="img4" Source="images/image4.jpg" Width="150" Height="100" Visibility="Collapsed" Margin="5"/>
            <Image x:Name="img5" Source="images/image5.jpg" Width="150" Height="100" Visibility="Collapsed" Margin="5"/>
            <Image x:Name="img6" Source="images/image6.jpg" Width="150" Height="100" Visibility="Collapsed" Margin="5"/>
        </WrapPanel>
    </Grid>
</Window>
