<Window x:Class="Calculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculadora" Height="400" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="txtDisplay" Text="0" FontSize="24" Height="50" IsReadOnly="True"
                 HorizontalContentAlignment="Right" VerticalContentAlignment="Center"
                 Background="LightYellow" Margin="0,0,0,10"/>

        <UniformGrid Grid.Row="1" Rows="5" Columns="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,10,0,0">
            <Button Content="7" Click="Numero_Click"/>
            <Button Content="8" Click="Numero_Click"/>
            <Button Content="9" Click="Numero_Click"/>
            <Button Content="CE" Click="CE_Click"/>

            <Button Content="4" Click="Numero_Click"/>
            <Button Content="5" Click="Numero_Click"/>
            <Button Content="6" Click="Numero_Click"/>
            <Button Content="/" Click="Operacion_Click"/>

            <Button Content="1" Click="Numero_Click"/>
            <Button Content="2" Click="Numero_Click"/>
            <Button Content="3" Click="Numero_Click"/>
            <Button Content="-" Click="Operacion_Click"/>

            <Button Content="0" Click="Numero_Click"/>
            <Button Content="." Click="Numero_Click"/>
            <Button Content="=" Click="Igual_Click"/>
            <Button Content="+" Click="Operacion_Click"/>

            <Button Content="%" Click="OperacionEspecial_Click"/>
            <Button Content="*" Click="Operacion_Click"/>
        </UniformGrid>
    </Grid>
</Window>
