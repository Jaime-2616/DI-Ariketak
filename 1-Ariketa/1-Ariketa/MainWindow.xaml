<Window x:Class="_1_Ariketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1_Ariketa"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="400">
    <Grid>
        <Button x:Name="btnOperar" Content="Operar" HorizontalAlignment="Left" Margin="20,380,0,0" VerticalAlignment="Top" Height="30" Width="82" Click="btnOperar_Click"/>
        <Button x:Name="btnLimpiar" Content="Limpiar" HorizontalAlignment="Center" Margin="0,380,0,0" VerticalAlignment="Top" Height="30" Width="76" Click="btnLimpiar_Click"/>
        <Button x:Name="btnSalir" Content="Salir" HorizontalAlignment="Left" Margin="285,380,0,0" VerticalAlignment="Top" Height="30" Width="76" Click="btnSalir_Click"/>
        <Label Content="Primer Número" HorizontalAlignment="Left" Margin="47,103,0,0" VerticalAlignment="Top" Background="Red" FontFamily="Arial Narrow" FontSize="16" Foreground="white" />
        <Label Content="Segundo Número" HorizontalAlignment="Left" Margin="46,145,0,0" VerticalAlignment="Top" Background="Red" FontFamily="Arial Narrow" FontSize="16" Foreground="white"  />
        <Label Content="Tercer Número" HorizontalAlignment="Left" Margin="46,188,0,0" VerticalAlignment="Top" Background="Red" FontFamily="Arial Narrow" FontSize="16" Foreground="white"  />
        <Label Content="Cuarto Número" HorizontalAlignment="Left" Margin="46,230,0,0" VerticalAlignment="Top" Background="Red" FontFamily="Arial Narrow" FontSize="16" Foreground="white"  />
        <TextBox x:Name="txtA" HorizontalAlignment="Left" Margin="189,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" Height="23" PreviewTextInput="NumberBox_PreviewTextInput"/>
        <TextBox x:Name="txtB" HorizontalAlignment="Left" Margin="189,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" Height="23" PreviewTextInput="NumberBox_PreviewTextInput"/>
        <TextBox x:Name="txtC" HorizontalAlignment="Left" Margin="189,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" Height="23" PreviewTextInput="NumberBox_PreviewTextInput"/>
        <TextBox x:Name="txtD" HorizontalAlignment="Left" Margin="189,233,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" Height="23" PreviewTextInput="NumberBox_PreviewTextInput"/>
        <Label Content="RESULTADO" HorizontalAlignment="Left" Margin="47,305,0,0" VerticalAlignment="Top" Background="Blue" FontFamily="Arial Narrow" FontSize="16" Foreground="white" />
        <TextBox x:Name="txtResultado" HorizontalAlignment="Left" Margin="189,308,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" Height="23" IsReadOnly="True"/>
    </Grid>
</Window>