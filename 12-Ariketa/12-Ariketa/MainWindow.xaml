<Window x:Class="_12_Ariketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12_Ariketa"
        mc:Ignorable="d"
        Title="Cálculo de Dietas" Height="450" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20" Background="#FFF0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="1" Grid.Column="0" 
                Background="White" 
                BorderBrush="#FFBDC3C7" 
                BorderThickness="1" 
                CornerRadius="5">
            <StackPanel Margin="15">
                <TextBlock Text="Dietas" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="#FF2C3E50" 
                          Margin="0,0,0,15"/>

                <CheckBox x:Name="chkDesayuno" 
                         Content="Desayuno" 
                         Margin="0,8" 
                         IsChecked="False" 
                         FontSize="14"/>
                <CheckBox x:Name="chkComida" 
                         Content="Comida" 
                         Margin="0,8" 
                         IsChecked="False" 
                         FontSize="14"/>
                <CheckBox x:Name="chkCena" 
                         Content="Cena" 
                         Margin="0,8" 
                         IsChecked="False" 
                         FontSize="14"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="2" 
                Background="White" 
                BorderBrush="#FFBDC3C7" 
                BorderThickness="1" 
                CornerRadius="5">
            <StackPanel Margin="15">
                <TextBlock Text="Viajes" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="#FF2C3E50" 
                          Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" Margin="0,8">
                    <TextBlock Text="KM" 
                              Width="80" 
                              VerticalAlignment="Center" 
                              FontSize="14"/>
                    <TextBox x:Name="txtKm" 
                            Width="110" 
                            Text="0" 
                            PreviewTextInput="NumberValidationTextBox" 
                            FontSize="14"/>
                    <TextBlock Text="× 0,25 €" 
                              Margin="10,0,0,0" 
                              VerticalAlignment="Center" 
                              FontSize="12" 
                              Foreground="#FF7F8C8D"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8">
                    <TextBlock Text="Días Viaje" 
                              Width="80" 
                              VerticalAlignment="Center" 
                              FontSize="14"/>
                    <TextBox x:Name="txtDiasViaje" 
                            Width="104" 
                            Text="0" 
                            PreviewTextInput="NumberValidationTextBox" 
                            FontSize="14"/>
                    <TextBlock Text="× 18 €" 
                              Margin="10,0,0,0" 
                              VerticalAlignment="Center" 
                              FontSize="12" 
                              Foreground="#FF7F8C8D"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="4" 
                Background="White" 
                BorderBrush="#FFBDC3C7" 
                BorderThickness="1" 
                CornerRadius="5">
            <StackPanel Margin="15">
                <TextBlock Text="Trabajo" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="#FF2C3E50" 
                          Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Días Trabajo" 
                              Width="80" 
                              VerticalAlignment="Center" 
                              FontSize="14"/>
                    <TextBox x:Name="txtDiasTrabajo" 
                            Width="100" 
                            Text="0" 
                            PreviewTextInput="NumberValidationTextBox" 
                            FontSize="14"/>
                    <TextBlock Text="× 42 €" 
                              Margin="10,0,0,0" 
                              VerticalAlignment="Center" 
                              FontSize="12" 
                              Foreground="#FF7F8C8D"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" 
                Margin="0,20,0,10" 
                CornerRadius="5">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center" 
                       Margin="15" 
                       VerticalAlignment="Center"/>
        </Border>

        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Center" 
                   Margin="0,10"/>
        <TextBlock Text="TOTAL: " 
                          FontSize="18" 
                          VerticalAlignment="Top" Grid.Column="4" Margin="10,23,145,0" Grid.Row="2"/>
        <TextBlock x:Name="txtTotal" 
                          Text="0 €" 
                          FontSize="18" 
                          VerticalAlignment="Top" 
                          Margin="81,23,46,0" RenderTransformOrigin="-0.076,2.423" Grid.Column="4" Grid.Row="2"/>
        <Button x:Name="btnSalir" 
                    Content="Salir" 
                    Click="BtnSalir_Click" 
                    FontWeight="Bold"
                    Margin="10,57,86,10" 
                    FontSize="14" Grid.Column="2" Grid.Row="2" Grid.RowSpan="2"/>
        <Button x:Name="btnLimpiar" 
                    Content="Limpiar" 
                    Click="BtnLimpiar_Click" 
                    FontWeight="Bold"
                    Margin="43,58,70,10" 
                    FontSize="14" Grid.RowSpan="2" Grid.Row="2"/>
    </Grid>
</Window>