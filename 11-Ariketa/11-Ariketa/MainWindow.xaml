<Window x:Class="_11_Ariketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formulario 1" Height="320" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Nombre:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtNombre" Width="200" Margin="0,0,0,5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="1º Apellido:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtApellido1" Width="200" Margin="0,0,0,5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="2º Apellido:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtApellido2" Width="200" Margin="0,0,0,5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="DNI:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtDni" Width="200" Margin="0,0,0,5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Aceptar" Click="BtnAceptar_Click" Width="120" Margin="5"/>
                <Button Content="Cargar y Visualizar" Click="BtnCargar_Click" Width="150" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>