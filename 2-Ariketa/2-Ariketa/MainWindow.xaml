                HorizontalAlignment="Left" Height="31" Margin="494,186,0,0" 
                VerticalAlignment="Top" Width="110" Grid.Column="1" 
                Click="btnUnir_Click"/>
        <Button x:Name="btnLimpiar" Content="Limpiar" 
                HorizontalAlignment="Left" Margin="189,278,0,0" 
                VerticalAlignment="Top" Width="415" Click="btnLimpiar_Click"/>
        <Button x:Name="btnSalir" Content="Salir" 
                HorizontalAlignment="Left" Margin="189,312,0,0" 
                VerticalAlignment="Top" Width="415" Click="btnSalir_Click"/>
    </Grid>
</Window>
